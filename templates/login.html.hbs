{{#> layout }}
    <div class="section container">
      <div class="row">
        <div class="col offset-m3 s12 m6">
          <h3>Sign in</h3>
          <form action="{{api}}/login">
              <div class="input-field my-3">
                <input id="username" name="username" placeholder=" ">
                <label for="username">Username</label>
              </div>
              <div class="input-field my-3">
                <input id="password" name="password" type="password" placeholder=" ">
                <label for="password">Password</label>
              </div>
              <div id="error" class="card-panel red lighten-2" hidden></div>
              <input class="btn my-3" type="submit" value="Go!">
          </form>
        </div>
      </div>
    </div>

    <script>
      init_form(document.querySelector('form'), (json) => {
        console.log(json);
        if (!json.success) throw Error(json.error);
        window.location = "{{homepage}}";
      })
    </script>
{{/layout}}
